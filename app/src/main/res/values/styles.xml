<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/font_view_body_normal</item>
        <item name="colorPrimary">@color/color_Primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--TEXT STYLES-->
    <style name="style_heading1">
        <item name="android:textColor">@color/color_bodyText</item>
        <item name="android:fontFamily">@font/font_view_body_semibold</item>
        <item name="android:textSize">@dimen/dimen_heading1</item>
    </style>

    <style name="style_heading2">
        <item name="android:textColor">@color/color_bodyText</item>
        <item name="android:fontFamily">@font/font_view_body_normal</item>
        <item name="android:textSize">@dimen/dimen_heading2</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="style_categoryHeading">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimen_categoryHeading</item>
        <item name="android:fontFamily">@font/font_view_body_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_categorySubHeading">
        <item name="android:textColor">@color/color_Primary</item>
        <item name="android:textSize">@dimen/dimen_heading1</item>
        <item name="android:fontFamily">@font/font_view_body_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_categorySubHeading2">
        <item name="android:textColor">@color/color_Primary</item>
        <item name="android:textSize">@dimen/dimen_mediaSubheading2</item>
        <item name="android:fontFamily">@font/font_view_body_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_app_name">
        <item name="android:textSize">@dimen/dimen_appName</item>
        <item name="android:fontFamily">serif</item>
    </style>



    <!--BUTTON STYLES-->
    <style name="style_filled_button">
        <item name="android:color">@color/color_categoryButtonFill</item>
        <item name="android:textColor">@color/color_bodyText</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/dimen_body</item>
        <item name="android:layout_width">@dimen/dimen_filledButtonWidth</item>
        <item name="android:layout_height">@dimen/dimen_filledButtonHeight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="style_filled_button_category">
        <item name="android:backgroundTint">@color/color_filledButtonCategory</item>
        <item name="android:textColor">@color/color_bodyText</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/dimen_body</item>
        <item name="android:layout_width">@dimen/dimen_filledButtonWidth</item>
        <item name="android:layout_height">@dimen/dimen_filledButtonHeight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="style_filled_button_sub">
        <item name="android:backgroundTint">@color/color_filledButtonSub</item>
        <item name="android:textColor">@color/color_bodyText</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/dimen_body</item>
        <item name="android:layout_width">@dimen/dimen_filledButtonWidth</item>
        <item name="android:layout_height">@dimen/dimen_filledButtonHeight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>


</resources>
